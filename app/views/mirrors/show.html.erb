<% content_for :title, "#{@mirror.url}" %>
<p id="notice"><%= notice %></p>

<p>
  <b>Url:</b>
  <%= @mirror.url %>
</p>

<p>
  <b>Description:</b>
  <%= @mirror.description %>
</p>

<p>
  <b>Country:</b>
  <%= @mirror.country %>
</p>

<% if can?( :update, @mirror ) and our_mirror?( @mirror, current_user )%>
    <%= link_to 'Edit', edit_mirror_path(@mirror) %> |
<% end %>
<%= link_to 'Back', mirrors_path %>
