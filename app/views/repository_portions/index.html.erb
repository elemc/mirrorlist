<% content_for :title, "Listing repository portions" %>

<table>
  <tr>
    <th>Name</th>
    <th>Url part</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @repository_portions.each do |repository_portion| %>
  <tr>
    <td><%= repository_portion.name %></td>
    <td><%= repository_portion.url_part %></td>
    <td><% if can?( :read, repository_portion ) %> <%= link_to 'Show', repository_portion %><% end %></td>
    <td><% if can?( :update, repository_portion ) %><%= link_to 'Edit', edit_repository_portion_path(repository_portion) %><% end %></td>
    <td><% if can?( :destroy, repository_portion ) %><%= link_to 'Destroy', repository_portion, method: :delete, data: { confirm: 'Are you sure?' } %><% end %></td>
  </tr>
<% end %>
</table>

<br />

<% if can?( :create, RepositoryPortion ) %>
<%= link_to 'New repository portion', new_repository_portion_path %>
<% end %>
