<% content_for :title, "Listing workarounds" %>

<table>
  <tr>
    <th>Key</th>
    <th>Value</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @workarounds.each do |workaround| %>
  <tr>
    <td><%= workaround.key %></td>
    <td><%= workaround.value %></td>
    <td><% if can?( :read, workaround ) %> <%= link_to 'Show', workaround %><% end %></td>
    <td><% if can?( :update, workaround ) %><%= link_to 'Edit', edit_workaround_path(workaround) %><% end %></td>
    <td><% if can?( :destroy, workaround ) %><%= link_to 'Destroy', workaround, method: :delete, data: { confirm: 'Are you sure?' } %><% end %></td>
  </tr>
<% end %>
</table>

<br />

<% if can?( :create, Workaround ) %>
    <%= link_to 'New Workaround', new_workaround_path %>
<% end %>
